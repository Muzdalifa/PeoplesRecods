@page
@model RaorPages.Pages.EditModel
@{
    ViewData["MainHeading"] = "Edit Person";
}

<form method="post">
    <label asp-for="Student.FirstName">First name:</label><br>
    <input type="text" asp-for="Student.FirstName"><br>

    <label asp-for="Student.LastName">Last name:</label><br>
    <input asp-for="Student.LastName"><br><br>

    <label asp-for="Student.PhoneNumber">Phone number:</label><br>
    <input asp-for="Student.PhoneNumber"><br><br>

    <label asp-for="Student.ImageName">Upload Photo:</label><br>
    <input type="file" asp-for="Student.ImageName"><br><br>

    <input type="hidden" asp-for="Student.Id"><br><br>

    <button value="Save">Save</button>
</form>
